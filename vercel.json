{
  "version": 2,

  "rewrites": [
    { "source": "/legal", "destination": "/legal/index" },
    { "source": "/create", "destination": "/create/index" },
    { "source": "/dashboard", "destination": "/dashboard/index" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/old-legal.pdf",
      "destination": "/legal/updated-legal.pdf",
      "permanent": true
    },
    {
      "source": "/terms",
      "destination": "/legal/terms-of-service.pdf",
      "permanent": true
    },
    {
      "source": "/privacy",
      "destination": "/legal/privacy-policy.pdf",
      "permanent": true
    }
  ]
}
