{
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.enable": true,
  "eslint.run": "onSave"
}
