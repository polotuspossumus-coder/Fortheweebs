{
  "version": 2,
  "builds": [
    { "src": "public/index.html", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/signup", "dest": "src/routes/signup.js" },
    { "src": "/api/tos/accept", "dest": "src/routes/tos.js" },
    { "src": "/api/tos/accepted/:userId", "dest": "src/routes/tos.js" },
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
