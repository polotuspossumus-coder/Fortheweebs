# ForTheWeebs Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# REQUIRED - Application will not start without these
# ============================================================================

# Supabase (Database & Auth)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenAI (AI Features)
OPENAI_API_KEY=sk-your_openai_api_key

# JWT Secret (Authentication)
JWT_SECRET=your_random_secure_jwt_secret_min_32_chars

# ============================================================================
# OPTIONAL - Features will be disabled without these
# ============================================================================

# Anthropic Claude (Mico AI Assistant)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# ============================================================================
# CSAM DETECTION (REQUIRED for Social Media Features)
# Choose ANY ONE or use multiple for best accuracy:
# - Google Vision: 1,000 free images/month (RECOMMENDED - instant approval)
# - AWS Rekognition: 5,000 free images/month first year (RECOMMENDED - instant approval)
# - Azure Moderator: 5,000 free images/month (RECOMMENDED - instant approval)
# - Clarifai: 1,000 free images/month (instant approval)
# - PhotoDNA: Microsoft service (requires business approval, 2-4 weeks)
# See PHOTODNA-ALTERNATIVES.md for setup instructions (5 minutes)
# ============================================================================

# Google Cloud Vision API (RECOMMENDED - instant approval)
GOOGLE_VISION_API_KEY=your_google_vision_key_here

# AWS Rekognition (RECOMMENDED - 5,000 free/month)
AWS_REKOGNITION_KEY=your_aws_key_here
AWS_REKOGNITION_SECRET=your_aws_secret_here
AWS_REGION=us-east-1

# Azure Content Moderator (RECOMMENDED - 5,000 free/month)
AZURE_MODERATOR_KEY=your_azure_key_here
AZURE_MODERATOR_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# Clarifai (1,000 free/month)
CLARIFAI_API_KEY=your_clarifai_key_here

# PhotoDNA (Microsoft - requires business approval)
PHOTODNA_API_KEY=your_photodna_api_key

# GitHub (Auto-Fix & PR Creation)
GITHUB_TOKEN=ghp_your_github_personal_access_token

# CCBill (Adult Content Payments - Alternative to Stripe)
CCBILL_ACCOUNT=your_ccbill_account_number
CCBILL_SUBACCOUNT=your_ccbill_subaccount
CCBILL_FLEX_FORM_ID=your_ccbill_flex_form_id
CCBILL_SALT=your_ccbill_salt_key

# Crypto Payments (Bitcoin/Ethereum)
COINBASE_API_KEY=00b1d938-c101-492d-82f1-30b113679944
COINBASE_WEBHOOK_SECRET=b3823365-be22-4129-b9be-a9dd4f535c54

# Email (Notifications & DMCA)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@fortheweebs.com

# AI Model APIs (Optional Advanced Features)
STABILITY_API_KEY=sk-your_stability_ai_key
REPLICATE_API_KEY=r8_your_replicate_api_key
MESHY_API_KEY=your_meshy_api_key
BLOCKADE_LABS_API_KEY=your_blockade_labs_key

# Music Production APIs
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
LANDR_API_KEY=your_landr_api_key

# Storage (Cloudinary for CDN)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================================================
# DEPLOYMENT - Set these in production
# ============================================================================

NODE_ENV=development
PORT=3002
VITE_APP_URL=http://localhost:3003
VITE_API_URL=http://localhost:3002
RAILWAY_BACKEND_URL=https://your-app.railway.app

# Frontend URL (for CORS)
VITE_FRONTEND_URL=http://localhost:3003

# Self-Healing System Configuration
ARTIFACT_DIR=./artifacts
ARTIFACT_BUCKET=ftw-artifacts
MEM_THRESH_MB=512
APP_VERSION=2.1.0

# Google Vision API (for AI payment routing)
GOOGLE_VISION_KEY=your_google_vision_api_key

# Redis (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================

SENTRY_DSN=your_sentry_dsn
POSTHOG_API_KEY=your_posthog_api_key
GOOGLE_ANALYTICS_ID=UA-your_ga_id

# ============================================================================
# ADMIN & SECURITY
# ============================================================================

# Admin recovery emails (comma-separated)
ADMIN_EMAILS=admin@fortheweebs.com

# Bug Fixer Console Token (REQUIRED for admin operations)
BUGFIXER_TOKEN=your_secure_bugfixer_token_min_32_chars

# Admin IP Allowlist (comma-separated, optional - leave empty to disable)
ADMIN_IPS=127.0.0.1,::1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_BATCH_FILES=100

# ============================================================================
# FEATURE FLAGS (true/false)
# ============================================================================

ENABLE_AI_FEATURES=true
ENABLE_SOCIAL_MEDIA=false
ENABLE_ADULT_CONTENT=true
ENABLE_CRYPTO_PAYMENTS=false
ENABLE_DEVELOPER_TOOLS=true
